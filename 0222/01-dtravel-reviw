    <!-- placehoder -->
    <input type="text" placeholder="이름을 작성해주세요">
    <!-- id, name, value -->
    <!-- 
        id는 해당 페이지 태그에 부여하는 주민번호와 같다
        특성: 유일해야 한다, 어디에나 부여 가능하다
        목적: 구분과 선택(CSS)
    -->
    <input type="text" value="강현욱" id="mamber-id">
    <!-- 
        name은 서버에 보낼때 사용하는 값의 이름(key)
        ex: (알파카 : 안녕하세요)
        {
            key(이름) : value(값)
        }
     -->
    <!-- value는 key에 대응하는 값이다 -->
    <input type="text" value="강현욱" id="member-id" name="">
    <select name="nationality" id="nationality">
        <option value="">선택</option>
        <option value="korea">한국</option>
    </select>
    <!-- ex -->
    <label>여행지</label>
    <input type="radio" name="tavel-spot" id="travel-spot" value="오류가날까">
